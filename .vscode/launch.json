    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Example: Streaming",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/streaming_response/"
        },
        {
            "name": "Run Example: Naive",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/naive/",
            "asRoot": true,
        },
        {
            "name": "Attach to Server (sudo-launched)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "127.0.0.1",
            "trace": "log" 
        },
        {
            "name": "Run Example: Slug Matching",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/slug_matching/",
            "asRoot": true,
        },
        {
            "name": "Websocket Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/websocket/",
            "asRoot": true,
        },
    ]
}